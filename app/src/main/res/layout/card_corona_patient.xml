<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AA00FF">


            <ImageView
                android:id="@+id/imageViewCountry"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/pk" />

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/coronaPatientDateAndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/imageViewCountry"
                android:text="Tuesday March 17"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textViewCoronaPatientsConfirmedToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coronaPatientDateAndTime"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageViewCountry"
                android:text="Confirmed Today"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <TextView
                android:textStyle="bold"
                android:id="@+id/textViewCurrentDayPatients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coronaPatientDateAndTime"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/textViewCoronaPatientsConfirmedToday"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewCoronaPatientsConfirmedTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCoronaPatientsConfirmedToday"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/imageViewCountry"
                android:text="Total Confirmed"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/textViewCurrentConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCurrentDayPatients"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/textViewCoronaPatientsConfirmedTotalTitle"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>