<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:padding="@dimen/widget_margin">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/relativeLayoutWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewCardWeather"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/clouds_foggy" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toEndOf="@+id/imageViewCardWeather"
                android:layout_toRightOf="@+id/imageViewCardWeather">

                <TextView
                    android:id="@+id/textViewCardTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="70\u2103"
                    android:textColor="#FAFAFA"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textViewCardWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCardTemperature"
                    android:layout_marginLeft="10dp"
                    android:text=" Cloudy "
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutTextViewCurrentLocationCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutWeather"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textViewCurrentCountryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakistan:"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCurrentCountryConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textViewCurrentCountryTitle"
                android:text="300"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutTextViewCurrentLocationCases"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/textViewWorldWideTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="World Wide:"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWorldWidePatients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textViewWorldWideTitle"
                android:text="20"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
